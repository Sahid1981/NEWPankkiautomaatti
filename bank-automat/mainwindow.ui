/* =========================
   ATM THEME (MainWindow.ui)
   ========================= */

/* Base */
QWidget#centralwidget {
    background: transparent;
    font-family: &quot;Segoe UI&quot;;
    font-size: 16px;
}

/* ATM panel/card */
QFrame#loginCard {
    background-color: rgba(18, 20, 24, 220);
    border: 1px solid rgba(255, 255, 255, 30);
    border-radius: 18px;
}

/* Titles */
QLabel#welcomeLabel {
    color: #F2F5FA;
    font-size: 28px;
    font-weight: 800;
    letter-spacing: 1px;
}

QLabel#subtitleLabel {
    color: rgba(242, 245, 250, 170);
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 2px;
}

/* Field labels */
QLabel#userLabel, QLabel#passLabel {
    color: rgba(242, 245, 250, 190);
    font-size: 13px;
    font-weight: 700;
}

/* Inputs */
QLineEdit#user, QLineEdit#password {
    background-color: rgba(255, 255, 255, 245);
    color: #121418;

    border: 2px solid rgba(120, 140, 160, 180);
    border-radius: 10px;

    padding: 10px 12px;
    font-size: 16px;
}

QLineEdit#user:focus, QLineEdit#password:focus {
    border: 2px solid rgba(40, 110, 220, 230);
    background-color: rgba(255, 255, 255, 255);
}

QLineEdit#user::placeholder, QLineEdit#password::placeholder {
    color: rgba(18, 20, 24, 110);
}

/* Error */
QLabel#errorLabel {
    color: #FF3B30;                         /* kirkas punainen */
    background-color: rgba(255, 59, 48, 28); /* kevyt punainen tausta */
    border: 1px solid rgba(255, 59, 48, 90);
    border-radius: 10px;
    padding: 6px 10px;

    font-size: 13px;
    font-weight: 800;
}

/* Login button */
QPushButton#KirjauduButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #2A5CFF,
                                stop:1 #1B3FBF);
    color: #FFFFFF;

    border: 1px solid rgba(0, 0, 0, 60);
    border-radius: 12px;

    font-size: 16px;
    font-weight: 800;
    padding: 12px 14px;
}

QPushButton#KirjauduButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #3A6DFF,
                                stop:1 #2449D8);
}

QPushButton#KirjauduButton:pressed {
    /* pressed: painuu alas -&gt; vaihda border-bottom pienemmäksi */
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #1E47D6,
                                stop:1 #16339E);
    border-bottom: 1px solid rgba(0, 0, 0, 110);
    padding-top: 13px;  /* pieni “painallus” */
    padding-bottom: 11px;
}
</string>
